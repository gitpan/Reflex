package Runner;
use Moose;
extends 'Reflex::Base';

has [qw(stdin stdout stderr)] => ( isa => 'FileHandle', is => 'ro' );
has pid                       => ( isa => 'Int', is => 'ro' );

#sub on_stderr_closed { die }
#sub on_stdout_closed { die }

with 'RunnerRole' => {
	stdin   => 'stdin',
	stdout  => 'stdout',
	stderr  => 'stderr',
	pid     => 'pid',
	ev_exit => 'exit',
};

1;
